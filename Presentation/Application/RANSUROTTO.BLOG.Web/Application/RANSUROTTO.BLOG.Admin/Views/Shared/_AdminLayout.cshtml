@using System.Globalization
@using RANSUROTTO.BLOG.Core.Context
@using RANSUROTTO.BLOG.Core.Domain.Common.Setting
@using RANSUROTTO.BLOG.Core.Domain.Localization.Setting
@using RANSUROTTO.BLOG.Framework.UI
@using RANSUROTTO.BLOG.Service.Common
@using RANSUROTTO.BLOG.Service.Helpers
@{
    var kendoVersion = "2014.1.318";
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl &&
                     !EngineContext.Current.Resolve<LocalizationSettings>().IgnoreRtlPropertyForAdminArea;

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/styles.rtl.css");
        Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/adminLTE/AdminLTE-2.3.0.rtl.css");
        Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/bootstrap/css/bootstrap.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/styles.css");
        Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/adminLTE/AdminLTE-2.3.0.min.css");
        Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/bootstrap/css/bootstrap.min.css");
    }

    Html.AppendCssFileParts(string.Format("~/Application/RANSUROTTO.BLOG.Admin/Content/kendo/{0}/kendo.rtl.min.css", kendoVersion));
    Html.AppendCssFileParts(string.Format("~/Application/RANSUROTTO.BLOG.Admin/Content/kendo/{0}/kendo.default.min.css", kendoVersion));
    Html.AppendCssFileParts(string.Format("~/Application/RANSUROTTO.BLOG.Admin/Content/kendo/{0}/kendo.common.min.css", kendoVersion));
    Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/jquery-ui-themes/smoothness/jquery-ui-1.10.3.custom.min.css");
    Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/fontAwesome/css/font-awesome-4.6.3.min.css");
    Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/typeahead/typeahead.css");
    Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/bootstrap-touchspin/jquery.bootstrap-touchspin.min.css");
    <!-- AdminLTE Skins (choose a skin from the css/skins) -->
    Html.AppendCssFileParts("~/Application/RANSUROTTO.BLOG.Admin/Content/adminLTE/skins/_all-skins.min.css");

    //scripts
    Html.AppendScriptParts(string.Format("~/Application/RANSUROTTO.BLOG.Admin/Scripts/kendo/{0}/kendo.web.min.js", kendoVersion));
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/admin.search.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/scripts/admin.navigation.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/admin.common.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/typeahead/typeahead.bundle.min.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/jquery-migrate-1.2.1.min.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/jquery-ui-1.10.3.custom.min.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/jquery.validate.unobtrusive.min.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/jquery.validate.min.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/adminLTE/app.min.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/bootstrap/bootstrap.min.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js");
    Html.AppendScriptParts("~/Application/RANSUROTTO.BLOG.Admin/Scripts/jquery-1.10.2.min.js");

    //page title
    string adminPageTitle = !String.IsNullOrWhiteSpace(ViewBag.Title) ? ViewBag.Title + " / " : "";
    adminPageTitle += T("Admin.PageTitle").Text;

    //X-UA-Compatible tag
    var commonSettings = EngineContext.Current.Resolve<CommonSettings>();
    if (commonSettings.RenderXuaCompatible)
    {
        Html.AppendHeadCustomParts(string.Format("<meta http-equiv=\"X-UA-Compatible\" content=\"{0}\"/>", commonSettings.XuaCompatibleValue));
    }

    //sidebar
    const string hideSidebarAttributeName = "HideSidebar";
    var hideSidebar = EngineContext.Current.Resolve<IWorkContext>().CurrentCustomer.GetAttribute<bool>(hideSidebarAttributeName);

}

<!DOCTYPE html>
<html @(supportRtl ? Html.Raw(" dir=\"rtl\"") : null)>
<head>
    <title>@adminPageTitle</title>
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Html.HeadCustom()
    @Html.CssFiles(this.Url, ResourceLocation.Head, false)
    @Html.Scripts(this.Url, ResourceLocation.Head, false)
</head>
<body class="hold-transition skin-blue sidebar-mini @if (hideSidebar)
                                                    {<text>sidebar-collapse</text>}">
    <div class="throbber">
        <div class="curtain">
        </div>
        <div class="curtain-content">
            <div>
                <h1 class="throbber-header">@T("Common.Wait...")</h1>
                <p>
                    <img src="@Url.Content("~/Application/RANSUROTTO.BLOG.Admin/content/images/throbber-synchronizing.gif")" alt="" />
                </p>
            </div>
        </div>
    </div>

    <div id="ajaxBusy">
        <span>&nbsp;</span>
    </div>

    <div class="wrapper">

        @if (IsSectionDefined("header"))
        {
            @RenderSection("header")
        }
        else
        {

        }

        @if (IsSectionDefined("headermenu"))
        {
            @RenderSection("headermenu")
        }
        else
        {

        }

        <div class="content-wrapper">
            @Html.Partial("Notifications")
            <div>
                @RenderBody()
            </div>
        </div>

        <div class="main-footer clearfix">
            <div class="pull-left">
                Powered by <a href="#" target="_blank">RANSUROTTO.BLOG</a>
            </div>
            <div class="pull-right hidden-xs">
                <b>RANSUROTTO.BLOG version @(RansurottoVersion.CurrentVersion)</b>
            </div>
            <div class="text-center">
                @{
                    var dateTimeHelper = EngineContext.Current.Resolve<IDateTimeHelper>();
                    var workContext = EngineContext.Current.Resolve<IWorkContext>();
                    var currentCulture = new CultureInfo(workContext.WorkingLanguage.LanguageCulture);
                }
                @dateTimeHelper.ConvertToUserTime(DateTime.Now).ToString("f", currentCulture)
            </div>
        </div>

    </div>

    <script>
        var AdminLTEOptions = {
            boxWidgetOptions: {
                boxWidgetIcons: {
                    collapse: 'fa-minus',
                    open: 'fa-plus'
                }
            }
        };
    </script>
    @Html.CssFiles(this.Url, ResourceLocation.Footer)
    @Html.Scripts(this.Url, ResourceLocation.Footer)
    <a id="backTop" class="btn btn-back-top bg-teal"></a>
    <script>
    $(document).ready(function () {
        $('#backTop').backTop();

        $('a.sidebar-toggle').on('click', function () {
            var collapsed = $('body').hasClass('sidebar-collapse');
            //TODO Url.Action("SavePreference", "Preferences")
            saveUserPreferences('@(Url.Action("SavePreference", "Preferences"))', '@hideSidebarAttributeName', collapsed);
        });
    });
    </script>
</body>
</html>
