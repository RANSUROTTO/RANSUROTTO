@using RANSUROTTO.BLOG.Framework.Extensions
@model RANSUROTTO.BLOG.Web.Models.Customer.LoginModel

@Html.ValidationSummary(false)

@using (Html.BeginForm(null, null, FormMethod.Post))
{
    <div class="form-group">
        @Html.CustomLabelFor(p => p.LoginName)
        @Html.CustomEditorFor(p => p.LoginName)
    </div>
    <div class="form-group">
        @Html.CustomLabelFor(p => p.Password)
        @Html.CustomEditorFor(p => p.Password)
    </div>
    <div class="form-group">
        @Html.CustomEditorFor(p => p.RememberMe)
    </div>
}