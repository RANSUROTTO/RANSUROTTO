@model BlogSettingsModel

@{
    //页面标题
    ViewBag.Title = T("Admin.Configuration.Settings.Blog").Text;
    //当前选中节点项系统名称
    Html.SetActiveMenuItemSystemName("Blog settings");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.Settings.Blog")
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            @Html.Action("Mode", "Setting")
            @Html.ValidationSummary(false)

            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @T("Admin.Configuration.Settings.Media.BlockTitle.Common")
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.CustomLabelFor(model => model.AllowGuestsToCreateComments)
                            </div>
                            <div class="col-md-9">
                                @Html.CustomEditorFor(model => model.AllowGuestsToCreateComments)
                                @Html.ValidationMessageFor(model => model.AllowGuestsToCreateComments)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.CustomLabelFor(model => model.NotifyAboutNewNewsComments)
                            </div>
                            <div class="col-md-9">
                                @Html.CustomEditorFor(model => model.NotifyAboutNewNewsComments)
                                @Html.ValidationMessageFor(model => model.NotifyAboutNewNewsComments)
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.CustomLabelFor(model => model.BlogCommentsMustBeApproved)
                            </div>
                            <div class="col-md-9">
                                @Html.CustomEditorFor(model => model.BlogCommentsMustBeApproved)
                                @Html.ValidationMessageFor(model => model.BlogCommentsMustBeApproved)
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.CustomLabelFor(model => model.AllowCustomersToEditComments)
                            </div>
                            <div class="col-md-9">
                                @Html.CustomEditorFor(model => model.AllowCustomersToEditComments)
                                @Html.ValidationMessageFor(model => model.AllowCustomersToEditComments)
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.CustomLabelFor(model => model.AllowCustomersToDeleteComments)
                            </div>
                            <div class="col-md-9">
                                @Html.CustomEditorFor(model => model.AllowCustomersToDeleteComments)
                                @Html.ValidationMessageFor(model => model.AllowCustomersToDeleteComments)
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.CustomLabelFor(model => model.RelativeDateTimeFormattingEnabled)
                            </div>
                            <div class="col-md-9">
                                @Html.CustomEditorFor(model => model.RelativeDateTimeFormattingEnabled)
                                @Html.ValidationMessageFor(model => model.RelativeDateTimeFormattingEnabled)
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.CustomLabelFor(model => model.RichEditorAllowJavaScript)
                            </div>
                            <div class="col-md-9">
                                @Html.CustomEditorFor(model => model.RichEditorAllowJavaScript)
                                @Html.ValidationMessageFor(model => model.RichEditorAllowJavaScript)
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.CustomLabelFor(model => model.RichEditorAdditionalSettings)
                            </div>
                            <div class="col-md-9">
                                @Html.CustomEditorFor(model => model.RichEditorAdditionalSettings)
                                @Html.ValidationMessageFor(model => model.RichEditorAdditionalSettings)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
